#!/usr/local/bin/perl -w

### make_sql_files

use strict;
use Bio::Otter::SQL::Parser;
use Symbol 'gensym';

{
    ### For installer we should find the location of the core table.sql

    my $parser =  Bio::Otter::SQL::Parser->new;
    foreach my $file_name (@ARGV) {
        my $sql = $parser->parse_file($file_name);
        $sql->make_transactional;
        print $sql->string;
    }
}


__END__

=head1 NAME - make_sql_files

=head1 EXAMPLE

  make_sql_files ./otter.sql ./lace.sql ../../ensembl/sql/table.sql \
    ../../ensembl-pipeline/sql/table.sql

=head1 AUTHOR

