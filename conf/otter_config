[zebrafish.use_filters]
est2genome_human=0
est2genome_mouse=0
refseq_human=0

[default.filter.RepeatMask]
module=Bio::EnsEMBL::Ace::Filter::Repeatmasker

[default.filter.trf]
module=Bio::EnsEMBL::Ace::Filter::TRF

[default.filter.Est2Genome_human]
module=Bio::EnsEMBL::Ace::Filter::Similarity::DnaSimilarity
max_coverage=10
hseq_prefix=Em:
method_tag=EST_Human
homol_tag=EST_homol

[default.filter.Est2Genome_fish]
module=Bio::EnsEMBL::Ace::Filter::Similarity::DnaSimilarity
max_coverage=10
hseq_prefix=Em:
method_tag=EST_Fish
homol_tag=EST_homol

[default.filter.Est2Genome_mouse]
module=Bio::EnsEMBL::Ace::Filter::Similarity::DnaSimilarity
max_coverage=10
hseq_prefix=Em:
method_tag=EST_Mouse
homol_tag=EST_homol

[default.filter.Est2Genome_other]
module=Bio::EnsEMBL::Ace::Filter::Similarity::DnaSimilarity
max_coverage=10
hseq_prefix=Em:
method_tag=EST
homol_tag=EST_homol

[default.filter.vertrna]
module=Bio::EnsEMBL::Ace::Filter::Similarity::DnaSimilarity
max_coverage=10
