#!/usr/bin/perl -Tw

use strict;
use warnings;

BEGIN { use lib ($ENV{OTTER_PERL_INC} || q{}) =~ m{([^:]+)}g }
use SangerPaths qw{ core bioperl123 otter };
use Bio::Otter::Git qw{ :server_ensembl :match };

use Bio::Otter::Server::Support::Web;
use Bio::Otter::ServerAction::LoutreDB;

sub get_db_info {
    my ($server) = @_;
    my $coord_system_name = $server->require_argument('coord_system_name') || 'chromosome';
    my $coord_system_version = $server->require_argument('coord_system_version') || __PACKAGE__.' '.__LINE__;
    return Bio::Otter::ServerAction::LoutreDB->new($server)->get_db_info($coord_system_name, $coord_system_version);
}

Bio::Otter::Server::Support::Web->send_response(-content_type => 'application/json', \&get_db_info);

__END__

=head1 NAME - get_db_info

=head1 AUTHOR

Ana Code B<email> anacode@sanger.ac.uk

