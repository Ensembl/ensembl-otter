#!/usr/bin/perl -Tw

# Author:        jgrg
# Group:         anacode
# Maintainer:    jgrg

use strict;
use warnings;

BEGIN { use lib ($ENV{OTTER_PERL_INC} || q{}) =~ m{([^:]+)}g }
use SangerPaths qw{ core bioperl123 ensembl69 otter72 };

use Bio::Otter::ServerScriptSupport;
use Bio::Otter::ServerAction::Region;

sub unlock_region {
    my ($server) = @_;

    my $params = $server->require_arguments('data');
    my $sa_regionr = Bio::Otter::ServerAction::Region->new($server, $params);

    $sa_regionr->unlock_region;

    return $server->otter_wrap_response("<response>\n</response>\n");
}

Bio::Otter::ServerScriptSupport->send_response(\&unlock_region);
