#!/usr/local/bin/perl -w

BEGIN {
    my $headcode = 0;
    foreach (@ARGV) {
        if(/\-((?:no)?)headcode/) {
            $headcode = not $1;
        }
    }
    if($headcode) {
        foreach my $path (@INC) {
            unless( $path=~s{ensembl/modules}{ensembl_head/modules}g ) {
                $path=~s{ensembl_head/modules}{ensembl/modules}g;
            };
        }
    }
}

print join("\n", @INC, '');

